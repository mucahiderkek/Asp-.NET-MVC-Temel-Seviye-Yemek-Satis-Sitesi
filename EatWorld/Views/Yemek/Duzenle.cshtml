@model EatWorld.Models.Yemek

<div class="container shadow p-5">
    <form class="form-floating" method="post" asp-action="Duzenle">

        <input asp-for="Id" hidden />

        <div class="mb-3">
            <label class="form-label" asp-for="Adı">Adı</label>
            <input type="text" class="form-control" asp-for="Adı" placeholder="Ürün Adını Giriniz">
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Açıklaması">Açıklama</label>
            <input type="text" class="form-control" asp-for="Açıklaması" placeholder="Ürün Açıklaması Giriniz">
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Kategorisi">Kategorisi</label>
            <input type="text" class="form-control" asp-for="Kategorisi" placeholder="Ürün Açıklaması Giriniz">
        </div>


        <div class="mb-3">
            <label class="form-label" asp-for="Fiyatı">Fiyat</label>
            <input type="text" class="form-control" asp-for="Fiyatı" placeholder="Ürün Fiyatı Giriniz">
        </div>
        <div class="form-floating mb-3">
            <label asp-for="PhotoPath" class="custom-file-label" hidden>@Model.PhotoPath</label>
        </div>
        

        <div class="form-floating mb-3">

            <input type="file" class="form-control  custom-file-input" asp-for="PhotoPath" placeholder="Ürün fotoğrafını seçiniz." />
            <label asp-for="PhotoPath" class="custom-file-label">Photo</label>
            <span asp-validation-for="PhotoPath" class="alert-danger"></span>
        </div>

        <button class="btn btn-success" type="submit">Güncelle</button>

    </form>

    <form class="form-floating mt-3" method="post" style="display=inline-block" asp-action="SilKitap">
        <input asp-for="Id" hidden />

        <button class="btn btn-danger" type="submit"><i class="bi bi-x-circle-fill"></i> Sil</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary mt-3">Geri Dön</a>
</div>
